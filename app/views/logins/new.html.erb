<%= content_for(:title, 'Login' ) %>
<h1>Login</h1>
<%= form_tag '/login' do %>
  <div class="input-grouped">
    <%= label_tag 'username', 'Email or Username' %>
    <%= text_field_tag 'username', nil, class: 'form-control' %>
  </div>
  <div class="input-grouped">
    <%= label_tag :password %>
    <%= password_field_tag 'password', nil, class: 'form-control' %>
  </div>
  <div class="input-grouped">
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  </div>
<% end %>